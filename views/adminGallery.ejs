<main
  style="
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    background: #f9f9f9;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  "
>
  <h2
    style="
      text-align: center;
      color: #2c3e50;
      font-size: 28px;
      margin-bottom: 20px;
      font-weight: bold;
    "
  >
    Manage Gallery
  </h2>

  <!-- Add Photo Section -->
  <h3
    style="
      color: #3498db;
      font-size: 22px;
      margin-bottom: 20px;
      font-weight: 600;
    "
  >
    Add New Photo
  </h3>
  <form
    action="/gallery"
    method="POST"
    enctype="multipart/form-data"
    style="
      background: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    "
  >
    <label
      for="image"
      style="
        font-size: 16px;
        color: #555;
        font-weight: bold;
        margin-bottom: 10px;
      "
      >Upload Photo:</label
    >
    <input
      type="file"
      name="image"
      accept="image/*"
      required
      style="
        display: block;
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
      "
    />
    <button
      type="submit"
      style="
        padding: 12px 25px;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
      "
    >
      Add Photo
    </button>
  </form>

  <!-- Manage Existing Photos Section -->
  <h3
    style="
      color: #3498db;
      font-size: 22px;
      margin-bottom: 20px;
      font-weight: 600;
    "
  >
    Existing Photos
  </h3>
  <ul
    style="
      list-style: none;
      padding: 0;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    "
  >
    <% galleryItems.forEach(photo => { %>
    <li
      style="
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      "
    >
      <img
        src="<%= photo.image %>"
        alt="Gallery Image"
        style="
          width: 100%;
          height: 200px;
          object-fit: cover;
          border-radius: 10px;
          margin-bottom: 15px;
        "
      />

      <!-- Form for Updating the Image -->
      <form
        action="/gallery/<%= photo.id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
        style="margin-bottom: 15px"
      >
        <label
          for="image"
          style="
            font-size: 16px;
            color: #555;
            font-weight: bold;
            margin-bottom: 10px;
          "
          >Update Photo:</label
        >
        <input
          type="file"
          name="image"
          accept="image/*"
          style="
            display: block;
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
          "
        />
        <div style="display: flex; justify-content: space-between">
          <div style="display: flex; gap: 10px; align-items: center; margin-top: 10px;">
  <!-- Form for Updating the Image -->
  <form
    action="/gallery/<%= photo.id %>?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
    style="margin: 0"
  >
    <button
      type="submit"
      style="
        background-color: #3498db;
        color: white;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      "
    >
      Update
    </button>
  </form>

  <!-- Form for Deleting the Image -->
  <form
    action="/gallery/<%= photo.id %>?_method=DELETE"
    method="POST"
    style="margin: 0"
  >
    <button
      type="submit"
      style="
        background-color: #e74c3c;
        color: white;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      "
    >
      Delete
    </button>
  </form>
</div>

    
    </li>
    <% }); %>
  </ul>
</main>
<style>
  /* Grid Layout for Photos */
  ul {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  /* Make images equal size */
  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 10px;
  }

  /* Ensure proper spacing for list items */
  li {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  /* Align buttons horizontally */
  .button-container {
    display: flex;
    justify-content: space-between;
  }

  .button-container button {
    width: 48%;
  }
</style>
