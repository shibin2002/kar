<main style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; max-width: 1000px; margin: 40px auto; padding: 40px; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); color: #333; backdrop-filter: blur(5px); background-image: url('assets/img/hero-bg.jpg'); background-size: cover; background-position: center; background-attachment: fixed; background-repeat: no-repeat;">
    <!-- Admin Panel Heading -->
    <h2 style="text-align: center; color: #2c3e50; margin-bottom: 30px; font-weight: bold; font-size: 28px; letter-spacing: 1px; text-transform: uppercase;">
        Admin Panel
    </h2>

    <!-- Logout Button -->
    <!-- <form action="/logout" method="POST" style="text-align: right; margin-bottom: 30px;">
        <button type="submit" style="padding: 12px 25px; background-color: #e74c3c; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);">
            Logout
        </button>
    </form> -->

    <!-- Add New Project Section -->
    <h3 style="color: #3498db; margin-bottom: 15px; font-weight: bold; font-size: 22px;">Add New Project</h3>
    <form action="/projects" method="POST" enctype="multipart/form-data" style="background: rgba(248, 248, 248, 0.9); padding: 30px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15); margin-bottom: 40px;">
        <input type="text" name="name" placeholder="Project Name" required style="width: 100%; padding: 15px; margin-bottom: 15px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px; box-sizing: border-box;">
        <textarea name="description" placeholder="Project Description" required style="width: 100%; padding: 15px; margin-bottom: 20px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px; box-sizing: border-box;"></textarea>
        <label for="image" style="display: block; margin-bottom: 8px; color: #7f8c8d; font-size: 14px; font-weight: 600;">Upload Image:</label>
        <input type="file" name="image" accept="image/*" style="margin-bottom: 20px; padding: 8px; border-radius: 5px; background-color: #ecf0f1;">
        <button type="submit" style="padding: 12px 25px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);">
            Add Project
        </button>
    </form>

    <!-- Edit Projects Section -->
    <h3 style="color: #3498db; margin-bottom: 20px; font-weight: bold; font-size: 22px;"><center>Edit Projects</center></h3>
    <ul style="list-style-type: none; padding: 0; display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;">
        <% projects.forEach(project => { %>
            <li style="background: rgba(248, 248, 248, 0.9); border: 1px solid #ddd; border-radius: 10px; padding: 25px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); margin-bottom: 30px;">
                <!-- Update Form -->
                <form action="/projects/<%= project.id %>?_method=PUT" method="POST" enctype="multipart/form-data" style="margin-bottom: 15px;">
                    <input type="text" name="name" value="<%= project.name %>" required style="width: 100%; padding: 12px; margin-bottom: 15px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px; box-sizing: border-box;">
                    <textarea name="description" required style="width: 100%; padding: 12px; margin-bottom: 15px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px; box-sizing: border-box;"><%= project.description %></textarea>
                    <% if (project.image) { %>
                        <img src="<%= project.image %>" alt="<%= project.name %>" style="width: 100%; height: 200px; object-fit: cover; margin-bottom: 10px; border-radius: 5px; border: 2px solid #ddd;">
                    <% } %>
                    <label for="image" style="display: block; margin-bottom: 8px; color: #7f8c8d; font-size: 14px; font-weight: 600;">Update Image:</label>
                    <input type="file" name="image" accept="image/*" style="margin-bottom: 15px; padding: 8px; border-radius: 5px; background-color: #ecf0f1;">
                
                    <!-- Button Container -->
                    <div style="display: flex; gap: 10px; justify-content: flex-start;">
                        <button type="submit" style="padding: 12px 25px; background-color: #2ecc71; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);">
                            Update
                        </button>
                    </form>
                
                    <!-- Delete Form -->
                    <form action="/projects/<%= project.id %>?_method=DELETE" method="POST" style="margin: 0;">
                        <button type="submit" style="padding: 12px 25px; background-color: #e74c3c; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);">
                            Delete
                        </button>
                    </form>
                    </div>
                
            </li>
        <% }) %>
        
    </ul>
</main>
